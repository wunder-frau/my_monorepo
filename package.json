{
  "name": "@org/source",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build:remote": "cd apps/my-remote-app && vite build",
    "build:host": "cd apps/host-app && vite build",
    "build:books": "cd apps/books-frontend && vite build",
    "preview:host": "cd apps/host-app && vite preview --port 5000",
    "preview:remote": "cd apps/my-remote-app && vite preview --port 5001 --strictPort",
    "preview:books": "cd apps/books-frontend && vite preview --port 4200 --strictPort",
    "build:all": "concurrently 'npm run build:host' 'npm run build:remote' 'npm run build:books'",
    "preview:all": "concurrently 'npm run preview:host' 'npm run preview:remote' 'npm run preview:books'"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "eslint": "^8.57.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.3.0",
    "turbo-stream": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nrwl/react": "^19.8.4",
    "@nx/eslint": "19.8.4",
    "@nx/eslint-plugin": "19.8.4",
    "@nx/jest": "19.8.4",
    "@nx/js": "20.5.0",
    "@nx/react": "19.8.4",
    "@nx/vite": "^19.8.4",
    "@nx/web": "19.8.4",
    "@originjs/vite-plugin-federation": "^1.3.9",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.3.12",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.0.12",
    "@tailwindcss/vite": "^4.0.12",
    "@testing-library/react": "15.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "~22.1.0",
    "nx": "20.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.12",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.3.1"
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0"
  }
